<h2>Visits For <%= current_disc_golfer.name %></h2>
<ul>
  <% @visits.each do |visit| %>
    <li>
      <strong>Day Visited:</strong>
      <%= visit.day_visited %><br/>
      <%= link_to visit.course.name, course_path(visit.course) %>
      <br>
      Location: <%= visit.course.location %>
    </li>
    <%= link_to 'Destroy Visit', course_visit_path(@course, @course.visit),
               method: :delete,
               data: { confirm: 'Are you sure?!' } %>
  <% end %>
</ul>
