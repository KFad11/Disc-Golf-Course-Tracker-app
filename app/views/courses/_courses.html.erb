<ol id="disc_golf_courses">
  <% @courses.each do |course| %>
    <li>
      <%= link_to course.name, course_path(course) %>
      <br>
      Location: <%= course.location %>
      <br>
      <span id="par_button">
        <%= link_to '<button type="button">Longest Par on the course</button>'.html_safe, course_longest_par_path(course), :class => "long_par" %>
      </span>
      <br>
      <div id="course_<%= course.id %>">
      </div>
    </li>
    <br>
  <% end %>
</ol>
