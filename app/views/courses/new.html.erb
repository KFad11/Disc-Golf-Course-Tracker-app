<h1>New Course</h1>
<%= form_with scope: :course, url: courses_path, local: true do |form| %>

 <%= render partial: "shared/errors", locals: {object: @course} %>

  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :location %><br>
    <%= form.text_field :location %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
<%= link_to 'Back to the Index', courses_path %>
