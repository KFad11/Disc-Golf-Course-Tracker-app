<p>
  <strong>Course Name:</strong>
  <%= @course.name %>
</p>

<p>
  <strong>Location:</strong>
  <%= @course.location %>
</p>

<h2>Baskets</h2>

  <% @course.baskets.each do |basket| %>
  <p>
    <strong>Basket Number:</strong>
    <%= basket.basket_number %>
  </p>

  <p>
    <strong>Par:</strong>
    <%= basket.par %>
  </p>

  <%= link_to 'Destroy Basket', course_basket_path(@course, basket),
               method: :delete,
               data: { confirm: 'Are you sure?!' } %>
<% end %>

<%= render 'baskets/form' %>

<%= link_to 'Edit Course', edit_course_path(@course) %><br/>
<td><%= link_to 'Destroy Course', course_path(@course),
              method: :delete,
              data: { confirm: 'Are you sure?!' } %></td><br/>
<%= link_to 'Back to the Index', courses_path %>
