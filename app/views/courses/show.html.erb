<h2>
  <strong>Course Name:</strong>
</h2>

<h3>
  <%= @course.name %>
</h3>

<h2>
  <strong>Location:</strong>
</h2>

<h3>
 <%= @course.location %>
</h3><br/>

<%= link_to 'Log a visit to the course', new_course_visit_path(@course) %> -- OR! --
<%= link_to 'See all visits to the course', course_visits_path(@course), :class => "load_visits" %><br/>

<div class="visits">
  <ol>
  </ol>
</div>

<h2>Baskets</h2>

<% @course.baskets.by_number.each do |basket| %>
  <p>
    <strong>Basket Number:</strong>
    <%= basket.basket_number %>
  </p>

  <p>
    <strong>Par:</strong>
    <%= basket.par %>
  </p><br/>

  <%= link_to 'Destroy Basket', course_basket_path(@course, basket),
               method: :delete,
               data: { confirm: 'Are you sure?!' } %>
<% end %>

<%= render 'baskets/form' %><br/>

<h3><%= link_to 'Edit Course', edit_course_path(@course) %></h3>

<h3><td><%= link_to 'Destroy Course', course_path(@course),
              method: :delete,
              data: { confirm: 'Are you sure?!' } %></td></h3>

<h3><%= link_to 'Back to the Index', courses_path %></h3>

