<% if object && object.errors.any? %>
  <div id="error_explanation">
    <h2>
      We have <%= pluralize(object.errors.count, "error") %>  here, what did you break?! Let's take a look...
    </h2>
    <ul>
      <% object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
